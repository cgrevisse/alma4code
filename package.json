{
	"name": "alma4code",
	"displayName": "ALMA 4 VS Code",
	"description": "Extension that enables the retrieval of learning material related to code elements, based on AST-ontology mappings.",
	"author": {
		"name": "Christian Gr√©visse",
		"email": "christian.grevisse@uni.lu",
		"url": "https://github.com/cgrevisse"
	},
	"publisher": "cgrevisse",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/cgrevisse/alma4code"
	},
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.44.0"
	},
	"icon": "img/icon.png",
	"galleryBanner": {
		"color": "#FC823F",
		"theme": "light"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"alma",
		"ast",
		"swift",
		"ontology",
		"learning"
	],
	"bugs": {
		"url": "https://github.com/cgrevisse/alma4code/issues",
		"email": "christian.grevisse@uni.lu"
	},
	"homepage": "https://coast.uni.lu/alma/",
	"activationEvents": [
		"onCommand:alma4code.retrieve"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "alma4code.retrieve",
				"title": "ALMA: Retrieve learning material"
			}
		],
		"keybindings": [
			{
				"command": "alma4code.retrieve",
				"key": "ctrl+shift+a",
				"mac": "cmd+shift+a",
				"when": "editorTextFocus && editorHasSelection"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/js-base64": "^2.3.1",
		"@types/uuid": "^7.0.3",
		"js-base64": "^2.5.2",
		"uuid": "^7.0.3"
	}
}
